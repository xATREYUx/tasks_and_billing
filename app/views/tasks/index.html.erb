<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>task id</th>
      <th>Task date</th>
      <th>Time billed</th>
      <th>Rate</th>
      <th>Notes</th>
      <th>Description</th>
      <th>Client Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.task_date %></td>
        <td><%= task.time_billed %></td>
        <td><%= task.rate %></td>
        <td><%= task.notes %></td>
        <td><%= task.description %></td>
          <td><%= task.client.last_name %></td>

        <td><%= link_to 'Show', client_task_path(client_id: task.client_id, id:task.id) %></td>
        <td><%# link_to 'Edit', edit_task_path(task) %></td>
        <td><%# link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

